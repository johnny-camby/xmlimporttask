@model List<CustomerDto>
@{ ViewData["Title"] = "Home Page"; }

<h1>XML File Upload</h1>
<div class="row">
    <form class="form-inline" method="post" enctype="multipart/form-data" asp-controller="Home" asp-action="UploadXml">

        <div class="form-group mb-2">
            <div class="col-md-6">
                <input class="form-control" type="file" name="file" />
            </div>
        </div>
        <div class="form-group mb-2">
            <div class="col-md-6">
                <input class="btn btn-primary mb-2" type="submit" value="Upload" />
            </div>
        </div>
    </form>
</div>

<br />

<div class="col-md-12">
    <a class="btn btn-primary mb-2" asp-action="Create">Add New Customer</a>
</div>

<br />

<div class="row">
    <div class="col-md-12">

        <table class="table table-striped">
            <thead>
                <tr>
                    <td>CustomerID</td>
                    <td>ContactTitle</td>
                    <td>ContactName</td>
                    <td>CompanyName</td>
                    <td>Phone</td>
                    <td>Fax</td>
                    <td>Actions</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var customer in Model)
                {
    <tr>
        <td>@Html.DisplayFor(modelItem => customer.CustomerID)</td>
        <td>@Html.DisplayFor(modelItem => customer.ContactTitle)</td>
        <td>@Html.DisplayFor(modelItem => customer.ContactName)</td>
        <td>@Html.DisplayFor(modelItem => customer.CompanyName)</td>
        <td>@Html.DisplayFor(modelItem => customer.Phone)</td>
        <td>@Html.DisplayFor(modelItem => customer.Fax)</td>
        <td>
            <a asp-action="Edit" asp-route-id="@customer.Id">Edit</a>&nbsp;
            <a asp-action="Details" asp-route-id="@customer.Id">Details</a>&nbsp;
            <a asp-action="Delete" asp-route-id="@customer.Id">Delete</a>&nbsp;
        </td>
    </tr>}
            </tbody>
        </table>
    </div>
</div>